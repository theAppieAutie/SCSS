<body>
    <!-- Navigation Bar -->
    <nav class="custom-navbar">
        <div class="navbar-logo">
            <a>SCSS</a>
        </div>
        <ul class="navbar-text">
            <li>
                <a href="/home"><span class="glyphicon glyphicon-home"></span> Home</a>
            </li>
        </ul>
