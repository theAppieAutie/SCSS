<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href="public/css/style.css" rel="stylesheet">
    
        <!-- JavaScript Libraries -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        <!-- <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/1.2.0/p5.min.js"></script> -->
        <!-- Favicon -->
        <link rel="icon" href="public/assets/favicon.webp" type="image/x-icon">
        <!-- Page Title -->
        <title>Security Control Simulation System</title>
    </head>
<script>
    var packetArray = JSON.parse('<%- packetArray %>');
</script>

<body>
    <!-- Navigation Bar -->
    <nav class="custom-navbar">
        <!-- Left Side -->
        <div>
            <div class="navbar-logo">
                <a href="/">SCSS</a>
            </div>
            <ul class="navbar-text">
                <li>
                    <a><span class="glyphicon glyphicon-screenshot"></span> Simulation in Progress!</a>
                </li>
            </ul>
        </div>
        <!-- Right Side -->
        <button id="finish-button">Finish</button>
    </nav>

    <section class="panels">
        <!-- Left Panel -->
        <aside id="dronesInfoContainer">
            <!-- Connection Information Section -->
            <section class="parameters">
                <h4>Connection Information:</h4>
                <div>
                    <h4 id="info-ip">IP Address: No connection selected</h4>
                    <h4 id="info-country">Country: No connection selected</h4>
                    <h4 id="info-checksum">Packet Size: No connection selected</h4>
                    <h4 id="info-protocol">Protocol: No connection selected</h4>
                    <h4 id="info-time">Connection Time: No connection selected</h4>
                    <h4 id="info-certificates">SSL/TLS Certificates: No connection selected</h4>
                    <h4 id="info-portnumber">Port Number: No connection selected</h4>
                    <h4 id="info-fragmentation">Fragmentation: No connection selected</h4>
                    <h4 id="info-classification">Classification: Unclassified</h4>
                </div>
            </section>

            <!-- Drone Classification Buttons -->
            <section class="droneButtons">
                <h4>Classification:</h4>
                <div>
                    <button id="Trusted" type="button">Trusted</button>
                    <button id="Neutral" type="button">Neutral</button>
                    <button id="Hostile" type="button">Hostile</button>
                </div>
                <button id="confirmButton" type="button">Confirm</button>
            </section>
        </aside>

        <!-- Middle Panel -->
        <section id="game">
            <img draggable="false" src="../public/assets/radarLines.png">
        </section>

        <!-- Right Panel (Recommendations) -->
        <aside id="recommendation">
        <% if (recommendations.length > 0) { %>
            
                <h4>Recommendation Panel:</h4>
                <ul>
                    <% recommendations.forEach(function(rec) { %>
                        <li><%= rec %></li>
                    <% }) %>
                </ul>
            
        <% } else { %>
            <!-- If no recommendations are available, do not render anything -->
        <% } %>
        </aside>
    </section>

    <!-- Initialize user group variable -->
    <script>
        var userGroup = "<%= group %>";

    </script>

    <!-- Additional Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/seedrandom/3.0.5/seedrandom.min.js"></script>
    <script type="module" src="../public/scripts/trial.js"></script>
</body>
</html>
