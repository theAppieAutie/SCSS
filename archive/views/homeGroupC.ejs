        testScenario.style.display = "none";
        scenario1.style.display = "none";
        scenario3.style.display = "none"
        scenario2.style.display = "block"
        scenario2status.style.backgroundColor = "#32CD32";

    }

    if (scenario2Finished) {
        testScenario.style.display = "none";
        scenario3.style.display = "none"
        scenario1.style.display = "none";

        scenario2.style.display = "none"
        scenario3status.style.backgroundColor = "#32CD32";

