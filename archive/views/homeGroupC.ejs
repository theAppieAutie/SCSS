    const beforeTrialsQuestionaire = document.getElementById("beforeTrialsQuestionaire")
    const testScenario = document.getElementById("testScenario")
    const unsupervisedTest = document.getElementById("unsupervisedTest");
    const scenario1 = document.getElementById("scenario1")
    const scenario2 = document.getElementById("scenario2")
    const scenario3 = document.getElementById("scenario3")



    // var to check if scenario is finished
    const beforeTrialsQuestionaireFinished = sessionStorage.getItem("beforeTrialsQuestionaireFinished");
    const testScenarioFinished = sessionStorage.getItem("testScenario");
    const unsupervisedTestScenarioFinished = sessionStorage.getItem("unsupervisedTestScenario");
    const scenario1Finished = sessionStorage.getItem("scenario1");
    const scenario2Finished = sessionStorage.getItem("scenario2");
    const scenario3Finished = sessionStorage.getItem("scenario3");


    // const testScenarioFinished = sessionStorage.getItem("testScenario");
