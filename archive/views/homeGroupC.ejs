    testScenario.style.display = "none";
    unsupervisedTest.style.display = "none";
    scenario1.style.display = "none";
    scenario2.style.display = "none"
    scenario3.style.display = "none"

    if (beforeTrialsQuestionaireFinished) {

        testScenario.style.display = "block";
        beforeTrialsQuestionaire.style.display = "none";

    }

    if (testScenarioFinished) {

        testScenario.style.display = "none";
        unsupervisedTest.style.display = "block";

        testScenarioStatus.style.backgroundColor = "#32CD32";

    }

    if (unsupervisedTestScenarioFinished) {

        scenario3.style.display = "block";
        unsupervisedTest.style.display = "none";
        unsupervisedTestScenarioStatus.style.backgroundColor = "#32CD32";



    }
    if (scenario3Finished) {
        testScenario.style.display = "none";
        scenario2.style.display = "none"
